#
#  PNPM PACKAGE MANAGER CONFIG
# ==============================================================================
# Purpose: Enforces strict dependency resolution and version locking to
# ensure identical environments across all developer machines and CI/CD.
# ==============================================================================

# ==========================================
# ðŸ“¦ DEPENDENCY STRATEGY
# ==========================================
# Always prefer using the versions specified in package.json for peers
strict-peer-dependencies=true

# Prevents pnpm from automatically installing peer dependencies
# Ensures we have strict control over the dependency graph
ignore-peer-dependencies=false

# Explicitly disable auto-installation of peer dependencies
# This prevents pnpm from guessing which version you want
auto-install-peers=false

# Save exact versions (e.g., 1.2.3) instead of ranges (e.g., ^1.2.3)
# This is the "Gold Standard" for production stability
save-exact=false

# ==========================================
# ðŸ”§ COMPATIBILITY (PNPM v10+)
# ==========================================
# Fixes ESLint VS Code extension not finding plugins with pnpm v10 node_modules structure
# See: https://github.com/microsoft/vscode-eslint/issues/1986
# Answer: https://github.com/microsoft/vscode-eslint/issues/1986#issuecomment-2799868163
public-hoist-pattern[]=*eslint-plugin*
